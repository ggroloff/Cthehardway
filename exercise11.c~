#include <stdio.h>

/*This exercise demonstrates the structure of using a while loop.

while(TEST) {CODE;}

*/

int main(int argc, char *argv[])
{
	int i = 0; //must initialize prior to while loop

	while(i < argc) {
		printf("arg number %d is %s\n", i, argv[i]);
	i++; //must increment within the loop
	}

	//Printing out any old string array
	char *colors[] = {
		"red", "orange", "green", "blue", "yellow"
	};
	int num_colors = 5;
	i = 0; //must re-initialize to 0 for the second loop as it uses the same variable

	while(i < num_colors) {
		printf("color %d is %s\n", i, colors[i]);
	i++;
	}

	return 0;
}
